<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ezy.widget.view.IconFontView
            android:id="@android:id/icon"
            style="?attr/style_setting_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:background="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_toRightOf="@android:id/icon"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_underline"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@android:id/title"
                    style="?attr/style_setting_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="标题" />

                <TextView
                    android:id="@android:id/summary"
                    style="?attr/style_setting_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="标题" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/gap"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@android:id/text1"
                    style="?attr/style_setting_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="标题" />

                <ezy.widget.view.IconFontView
                    android:id="@android:id/icon2"
                    style="?attr/style_setting_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</merge>

